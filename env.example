PENS_IMAP_SERVER=imap.gmail.com
PENS_IMAP_PORT=993
PENS_IMAP_USERNAME=your-email@gmail.com
PENS_IMAP_PASSWORD=your-app-password
PENS_IMAP_USE_SSL=true
PENS_PRIORITY_THRESHOLD=5
PENS_CHECK_INTERVAL=60
PENS_DEBUG_MODE=false
PENS_LOG_LEVEL=INFO

# OAuth configuration (optional)
# Uncomment and set these if you prefer environment-based configuration
# PENS_AUTH_METHOD=oauth
# PENS_OAUTH_CLIENT_ID=YOUR_AZURE_AD_CLIENT_ID
# PENS_OAUTH_TENANT_ID=common
# PENS_OAUTH_SCOPE="https://outlook.office365.com/IMAP.AccessAsUser.All https://outlook.office365.com/SMTP.Send offline_access"
# PENS_OAUTH_TOKEN_FILE=.oauth_token.json

# Certificate-based authentication (recommended for enterprise)
# PENS_OAUTH_CERTIFICATE_PATH=certs/pens-cert.pem
# PENS_OAUTH_PRIVATE_KEY_PATH=certs/pens-key.pem

# Client secret authentication (alternative to certificate)
# PENS_OAUTH_CLIENT_SECRET=your-client-secret
