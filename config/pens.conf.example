# PENS (Professional Email Notification System) Configuration File
# ================================================================

# IMAP Server Configuration
# -------------------------
imap_server = imap.gmail.com
imap_port = 993
imap_use_ssl = true
imap_username = your-email@gmail.com
imap_password = your-app-password

# PENS Behavior Configuration
# ---------------------------
# Priority threshold (1-10): Controls notification priority filtering
# 1 = Low priority threshold (notify on everything)
# 10 = High priority threshold (only highest priority emails)
priority_threshold = 5

# Check interval in seconds: How often to check for new emails
check_interval = 60

# Logging Configuration
# --------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
log_level = INFO

# Enable debug mode for detailed logging
debug_mode = false

# OAuth 2.0 Configuration (Optional)
# ----------------------------------
# For Microsoft 365 / Outlook.com, you can use OAuth 2.0 authentication
# instead of passwords. This is more secure and recommended for production.
#
# Option 1: Certificate-Based Authentication (Recommended for Enterprise)
# auth_method = oauth
# oauth_client_id = your-azure-ad-client-id
# oauth_tenant_id = common
# oauth_certificate_path = certs/pens-cert.pem
# oauth_private_key_path = certs/pens-key.pem
# oauth_scope = https://outlook.office365.com/IMAP.AccessAsUser.All https://outlook.office365.com/SMTP.Send offline_access
#
# Option 2: Client Secret Authentication
# auth_method = oauth
# oauth_client_id = your-azure-ad-client-id
# oauth_tenant_id = common
# oauth_client_secret = your-client-secret
# oauth_scope = https://outlook.office365.com/IMAP.AccessAsUser.All https://outlook.office365.com/SMTP.Send offline_access
#
# To set up certificate-based authentication:
# 1. Run: node scripts/certificate-setup.js
# 2. Upload the certificate to Azure AD (see script output)
# 3. Configure the paths above
#
# Notes:
# ------
# For Gmail users:
# - Use an "App Password" instead of your regular password
# - Enable 2-factor authentication first
# - Generate app password at: https://myaccount.google.com/apppasswords
#
# For other email providers:
# - Outlook: imap-mail.outlook.com (port 993)
# - Yahoo: imap.mail.yahoo.com (port 993)
# - iCloud: imap.mail.me.com (port 993)

